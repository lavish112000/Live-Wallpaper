<Window
    x:Class="Lively.Views.DiagnosticMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:Lively.Extensions"
    xmlns:local="clr-namespace:Lively.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Lively.Properties"
    Title="Lively Diagnostics"
    Width="300"
    Height="250"
    ResizeMode="CanMinimize"
    Style="{DynamicResource WindowUI}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="5">
        <StackPanel VerticalAlignment="Center">
            <Button
                MinWidth="200"
                MinHeight="35"
                Margin="0,0,0,5"
                Command="{Binding CreateLogFileCommand}"
                Content="{ext:LocalizedString ExportLogs_Description}" />
            <Button
                MinWidth="200"
                MinHeight="35"
                Margin="0,0,0,5"
                Command="{Binding OpenLogViewCommand}"
                Content="{ext:LocalizedString Debug_Description}" />
            <Button
                MinWidth="200"
                MinHeight="35"
                Margin="0,0,0,5"
                Command="{Binding OpenHelpCommand}"
                Content="{ext:LocalizedString ReportBug_Description}" />
            <ToggleButton
                MinWidth="200"
                MinHeight="35"
                Command="{Binding ToggleGridOverlayCommand}"
                IsChecked="{Binding IsGridOverlayVisible, Mode=OneWay}">
                Grid Detection Overlay
            </ToggleButton>
        </StackPanel>
    </Grid>
</Window>
