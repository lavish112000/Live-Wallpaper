<Page
    x:Class="Lively.UI.WinUI.Views.Pages.Settings.SettingsScreensaverView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:customConverters="using:Lively.UI.WinUI.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Lively.UI.WinUI.Views.Pages.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <customConverters:BooleanToVisibilityConverter x:Key="VisibilityConverter" />
        <customConverters:AudioVolumeGlyphConverter x:Key="AudioVolumeGlyphConverter" />
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="10,25,10,5" Spacing="{StaticResource SettingGroupControlSpacing}">
                <!--  Appearnace and Behaviour  -->
                <StackPanel>
                    <TextBlock
                        x:Uid="AppearanceBehaviour"
                        Margin="0,0,0,10"
                        FontWeight="SemiBold" />

                    <controls:SettingsCard x:Uid="ScreensaverLockOnResume">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE72E;" />
                        </controls:SettingsCard.HeaderIcon>
                        <ToggleSwitch IsOn="{Binding IsLockOnResume, Mode=TwoWay}" />
                    </controls:SettingsCard>

                    <controls:SettingsCard x:Uid="ScreensaverFadeIn">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE793;" />
                        </controls:SettingsCard.HeaderIcon>
                        <ToggleSwitch IsOn="{Binding IsFadeIn, Mode=TwoWay}" />
                    </controls:SettingsCard>
                </StackPanel>

                <!--  Audio  -->
                <StackPanel>
                    <TextBlock
                        x:Uid="AudioGroup"
                        Margin="0,0,0,10"
                        FontWeight="SemiBold" />
                    <controls:SettingsCard x:Uid="Audio" HeaderIcon="{Binding Volume, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource AudioVolumeGlyphConverter}}">
                        <Slider
                            MinWidth="{StaticResource SettingActionControlMinWidth}"
                            Maximum="100"
                            Minimum="0"
                            Value="{Binding Volume, Mode=TwoWay}" />
                    </controls:SettingsCard>
                </StackPanel>

                <StackPanel>
                    <TextBlock
                        x:Uid="System"
                        Margin="0,0,0,10"
                        FontWeight="SemiBold" />
                    <controls:SettingsCard
                        x:Uid="ScreensaverWindowsSettings"
                        Command="{Binding OpenWindowsSettingsCommand}"
                        IsClickEnabled="True">
                        <controls:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE770;" />
                        </controls:SettingsCard.HeaderIcon>
                    </controls:SettingsCard>
                    <InfoBar
                        x:Uid="ScreensaverPlugin"
                        IsClosable="False"
                        IsOpen="True"
                        Severity="Warning"
                        Visibility="{Binding IsScreensaverPluginNotify, Mode=OneWay, Converter={StaticResource VisibilityConverter}}">
                        <InfoBar.ActionButton>
                            <HyperlinkButton NavigateUri="https://github.com/rocksdanister/lively/wiki/Screen-Saver" ToolTipService.ToolTip="https://github.com/rocksdanister/lively/wiki/Screen-Saver">
                                <HyperlinkButton.Content>
                                    <TextBlock x:Uid="ScreensaverPluginMessage" TextWrapping="Wrap" />
                                </HyperlinkButton.Content>
                            </HyperlinkButton>
                        </InfoBar.ActionButton>
                    </InfoBar>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
